<%- include("partials/header.ejs") %>

<form action="/submit" method="POST" class="NewUserInfo" id="registrationForm">
    <div class="BasicInfo">
        <h2>User Info</h2>
        <div id="UserName">
            <label class="regLabel" for="fName">First Name: </label>
            <input class="regInput" type="text" name="fName" id="fName" required />
            <label class="regLabel" for="lName">Last Name: </label>
            <input class="regInput" type="text" name="lName" id="lName" required />  
        </div><br>
        <div id="Email">
            <label class="regLabel" for="UserEmail">Email Address: </label>
            <input class="regInput" type="email" name="UserEmail" id="UserEmail">
        </div><br>
        <div id="UserBirthDate">
            <label class="regLabel" for="Birthdate">Birth Date: </label>
            <input class="regInput" type="date" name="Birthdate" id="Birthdate">
        </div><br>
        <div id="Identity">
            <label class="regLabel" for="Gender">Gender: </label>
            <select class="regInput" id="Gender">
                <option value="Female">Female</option>
                <option value="Male">Male</option>
                <option value="Non-Binary">Non-Binary</option>
                <option value="Other">Other</option>
            </select>
            <label class="regLabel" for="Pronouns">Pronouns: </label>
            <select class="regInput" id="Pronouns">
                <option value="She/Her">She/Her</option>
                <option value="He/Him">He/Him</option>
                <option value="They/Them">They/Them</option>
            </select>
        </div><br>
        <div id="SkillSet">
            <h3>Select your Development Skills/Interests</h3>
            <input class="regInput" type="checkbox" id="GameDevelopment" name="GameDevelopment" value="GameDevelopment">
            <label class="regLabel" for="GameDevelopment">Game Development</label><br>
            <input class="regInput" type="checkbox" id="WebDevelopment" name="WebDevelopment" value="WebDevelopment">
            <label class="regLabel" for="WebDevelopment">Web Development</label><br>
            <input class="regInput" type="checkbox" id="3DAnimation" name="3DAnimation" value="3DAnimation">
            <label class="regLabel" for="3DAnimation">3D Animation</label><br>
            <input class="regInput" type="checkbox" id="2DAnimation" name="2DAnimation" value="2DAnimation">
            <label class="regLabel" for="2DAnimation">2DAnimation</label><br>
            <input class="regInput" type="checkbox" id="MusicProduction" name="MusicProduction" value="MusicProduction">
            <label class="regLabel" for="MusicProduction">Music Production</label><br>
            <input class="regInput" type="checkbox" id="VideoEditing" name="VideoEditing" value="VideoEditing">
            <label class="regLabel" for="VideoEditing">Video Editing</label><br>
            <input class="regInput" type="checkbox" id="VoiceActing" name="VoiceActing" value="VoiceActing">
            <label class="regLabel" for="VoiceActing">Voice Acting</label><br>
        </div><br>
        <div id="UserInfo">
            <label class="regLabel" for="UserName">Create UserName: </label>
            <input class="regInput" type="text" name="UserName" id="UserName" required />
            <label class="regLabel" for="UserPassword">Create Password: </label>
            <input class="regInput" type="text" name="UserPassword" id="UserPassword" required />  
        </div><br>
    </div>
    <input type="submit" value="Register!" id="registerButton">
</form>

<% if (locals.registerMessage){ %>
    <h1 class="registeredMessage"><%= registerMessage %> <a href="/login">></a></h1>
    <script>
        document.getElementById("registrationForm").classList.add("hidden")
    </script> 
<% } else {%>
<% } %>

<%- include("partials/footer.ejs") %>